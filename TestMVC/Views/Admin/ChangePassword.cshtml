@{
    ViewBag.Title = "Profile";
    var F = @Html.F();
}


@section body {

    @(F.Panel().ID("Panel1").ShowHeader(false).ShowBorder(false).AutoScroll(true).Width(600)
        .Items(
            F.SimpleForm().ID("SimpleForm1").LabelWidth(100).BodyPadding(10).LabelAlign(LabelAlign.Top).ShowBorder(false).ShowHeader(false)
                .Items(
                    F.TextBox().ID("tbxOldPassword").TextMode(TextMode.Password).Label("当前密码").Required(true).ShowRedStar(true),
                    F.TextBox().ID("tbxNewPassword").TextMode(TextMode.Password).Label("新密码").Required(true).MinLength(6).ShowRedStar(true),
                    F.TextBox().ID("tbxConfirmNewPassword").TextMode(TextMode.Password).Label("确认新密码").Required(true).ShowRedStar(true),
                    F.Button().ID("btnSave").Icon(Icon.SystemSave).OnClick(Url.Action("ChangePassword_btnSave_OnClick"), "SimpleForm1").ValidateForms("SimpleForm1").ValidateTarget(Target.Top).Text("修改密码")
                )
        )
    )

}

