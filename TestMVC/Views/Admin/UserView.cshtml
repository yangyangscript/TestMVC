@{
    ViewBag.User = "UserView";
    var F = @Html.F();
}

@model TestMVC.Models.User

@section body {

    @(F.Panel().ID("Panel1").ShowBorder(false).ShowHeader(false).AutoScroll(true).IsViewPort(true).Layout(LayoutType.VBox)
        .Toolbars(
            F.Toolbar().ID("Toolbar1")
                .Items(
                    F.Button().ID("btnClose").Icon(Icon.SystemClose).Text("关闭").Listener("click", "F.activeWindow.hide();")
                )
        )
        .Items(
            F.Form().ID("SimpleForm1").ShowBorder(false).ShowHeader(false).BodyPadding(10)
                .Rows(
                    F.FormRow()
                        .Items(
                            F.LabelFor(m => m.Name),
                            F.LabelFor(m => m.ChineseName)
                        ),
                    F.FormRow()
                        .Items(
                            F.LabelFor(m => m.Gender),
                            F.LabelFor(m=>m.Enabled).Text(Model.Enabled ? "启用" : "禁用")
                        ),
                    F.FormRow()
                        .Items(
                            F.LabelFor(m => m.Email),
                            F.LabelFor(m => m.CompanyEmail)
                        ),
                    F.FormRow()
                        .Items(
                            F.LabelFor(m => m.OfficePhone),
                            F.LabelFor(m => m.OfficePhoneExt)
                        ),
                    F.FormRow()
                        .Items(
                            F.LabelFor(m => m.HomePhone),
                            F.LabelFor(m => m.CellPhone)
                        ),
                    F.FormRow()
                        .Items(
                            F.LabelFor(m => m.Roles).Text(ViewBag.RoleText)
                        ),
                    F.FormRow()
                        .Items(
                            F.LabelFor(m => m.Titles).Text(ViewBag.TitleText)
                        ),
                    F.FormRow()
                        .Items(
                            F.LabelFor(m => m.Dept).Text(ViewBag.DeptText)
                        ),
                    F.FormRow()
                        .Items(
                            F.LabelFor(m => m.Remark)
                        )
                )
        )
    )

}
